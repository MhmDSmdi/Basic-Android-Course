<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/txt_bottom_sheet_share"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_medium"
        android:clickable="true"
        android:textColor="#000"
        android:background="@drawable/bottom_sheet_ripple"
        android:drawableTintMode="multiply"
        android:text="Share"
        android:drawableLeft="@drawable/ic_share"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:drawablePadding="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_bottom_sheet_info"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_medium"
        android:clickable="true"
        android:background="@drawable/bottom_sheet_ripple"
        android:text="Info"
        android:textColor="#000"
        android:drawableTintMode="multiply"
        android:drawableLeft="@drawable/ic_info"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:drawablePadding="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_bottom_sheet_remove"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_medium"
        android:clickable="true"
        android:background="@drawable/bottom_sheet_ripple"
        android:text="Remove"
        android:textColor="#000"
        android:drawableTintMode="multiply"
        android:drawableLeft="@drawable/ic_delete"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:drawablePadding="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_bottom_sheet_report"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_medium"
        android:clickable="true"
        android:background="@drawable/bottom_sheet_ripple"
        android:text="Report"
        android:textColor="#000"
        android:drawableTintMode="multiply"
        android:drawableLeft="@drawable/ic_report"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="2dp"
        android:drawablePadding="8dp"
        android:textStyle="bold" />

</LinearLayout>