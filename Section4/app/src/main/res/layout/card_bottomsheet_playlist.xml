<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="8dp"
    android:elevation="16dp"
    android:background="@drawable/bottom_sheet_ripple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_bottomsheet_card_playlist"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txt_bottomsheet_playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Best Song"
            android:backgroundTintMode="multiply"
            android:layout_below="@id/img_bottomsheet_card_playlist"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/txt_bottomsheet_number_songs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="79 songs, 4 hr"
            android:backgroundTintMode="multiply"
            android:layout_below="@id/txt_bottomsheet_playlist_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/font_small"
            />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="8dp"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true">
          <ImageView
              android:id="@+id/img_playlist_card_play"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/txt_bottomsheet_number_songs"
              android:tintMode="multiply"
              android:src="@drawable/ic_play"
              android:layout_marginLeft="8dp"/>

          <ImageView
              android:id="@+id/img_playlist_card_favorite"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/txt_bottomsheet_number_songs"
              android:tintMode="multiply"
              android:src="@drawable/ic_favorite_off"
              android:layout_marginLeft="8dp"/>

          <ImageView
              android:id="@+id/img_playlist_card_prop"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:tintMode="multiply"
              android:layout_below="@id/txt_bottomsheet_number_songs"
              android:src="@drawable/ic_propertise"
              android:layout_marginLeft="8dp"/>
      </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>