<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <EditText
        android:id="@+id/edittext_op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="OP2"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textview_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Res: "
        android:layout_below="@id/edittext_op2"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:id="@+id/numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:id="@+id/panel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_cal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel3"
            android:text="Calculate"/>

        <LinearLayout
            android:id="@+id/panel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_cal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="-"/>

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"/>

            <Button
                android:id="@+id/btn_multiple"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="*"/>

        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>